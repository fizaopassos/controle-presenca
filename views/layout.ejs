<!DOCTYPE html>
<html lang="pt-BR">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title><%= title || 'Controle de Presença' %></title>

<script src="https://unpkg.com/htmx.org@1.9.12"></script>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">

<link rel="stylesheet" href="/css/style.css">
<link rel="stylesheet" href="/css/theme.css">
<link rel="stylesheet" href="/css/sidebar.css">
</head>
<body>

<% const _showNavbar = (typeof showNavbar === 'undefined') ? true : showNavbar; %>
<% const _mainClass  = (typeof mainClass  === 'undefined') ? '' : mainClass; %>

<% if (_showNavbar) { %>
<div class="app-shell">
<!-- Sidebar esquerda -->
<%- include('partials/sidebar', { menuAtivo: menuAtivo || '', usuario: usuario }) %>

<!-- Área principal (topbar + conteúdo) -->
<div class="app-main">
  <header class="app-topbar">
    <div class="app-topbar-left">
      <span class="app-topbar-title"><%= title || '' %></span>
    </div>
    <div class="app-topbar-right">
      <% if (usuario) { %>
        <span class="text-muted me-3">
          Olá, <%= usuario.nome %> (<%= usuario.perfil %>)
        </span>
        <a href="/auth/logout" class="btn btn-outline-secondary btn-sm">Sair</a>
      <% } %>
    </div>
  </header>

  <main class="app-content <%= _mainClass %>">
    <%- include(page) %>
  </main>
</div>

</div>
<% } else { %>
<!-- Telas sem barra lateral (ex.: login) -->
<main class="<%= _mainClass || 'container-fluid mt-4' %>">
<%- include(page) %>
</main>
<% } %>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<!-- MODAL DE CONFIRMAÇÃO (mantido) -->
<div class="modal fade" id="confirmSubmitModal" tabindex="-1" aria-hidden="true">
<div class="modal-dialog modal-dialog-centered">
<div class="modal-content">
<div class="modal-header">
<h5 class="modal-title" id="confirmSubmitTitle">Confirmar</h5>
<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
</div>
<div class="modal-body" id="confirmSubmitBody">Confirma salvar?</div>
<div class="modal-footer">
<button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancelar</button>
<button type="button" class="btn btn-primary" id="confirmSubmitOk">Confirmar</button>
</div>
</div>
</div>
</div>

<script>
(function () {
const modalEl = document.getElementById('confirmSubmitModal');
const okBtn   = document.getElementById('confirmSubmitOk');
const titleEl = document.getElementById('confirmSubmitTitle');
const bodyEl  = document.getElementById('confirmSubmitBody');
if (!modalEl || !okBtn || !titleEl || !bodyEl) return;

let pending = null;

function openConfirmModal({ title, body, okText }) {
titleEl.textContent = title || 'Confirmar';
bodyEl.textContent  = body  || 'Tem certeza que deseja continuar?';
okBtn.textContent   = okText || 'Confirmar';

const modal = bootstrap.Modal.getOrCreateInstance(modalEl, { backdrop: 'static', keyboard: false });
modal.show();

}

document.addEventListener('click', function (e) {
const el = (e.target && e.target.closest)
? e.target.closest('button[data-confirm="1"], a[data-confirm="1"], [role="button"][data-confirm="1"]')
: null;

if (!el) return;

const isMutation =
  el.hasAttribute('hx-post') ||
  el.hasAttribute('hx-put') ||
  el.hasAttribute('hx-patch') ||
  el.hasAttribute('hx-delete');

const isLink = el.tagName === 'A' && el.getAttribute('href');

if (!isMutation && !isLink) return;

e.preventDefault();
e.stopPropagation();

pending = { type: isMutation ? 'htmx' : 'link', el };

openConfirmModal({
  title: el.dataset.confirmTitle || 'Confirmar',
  body:  el.dataset.confirmBody  || 'Tem certeza que deseja continuar?',
  okText: el.dataset.confirmOk   || 'Confirmar'
});

}, true);

document.addEventListener('submit', function (e) {
const form = e.target;
if (!form || form.nodeName !== 'FORM') return;
if (form.dataset.confirm !== '1') return;

if (form.hasAttribute('hx-post') || form.hasAttribute('hx-put') || form.hasAttribute('hx-patch') || form.hasAttribute('hx-delete')) return;

if (form.dataset.confirmed === '1') {
  form.dataset.confirmed = '0';
  return;
}

e.preventDefault();
pending = { type: 'form', form };

openConfirmModal({
  title: form.dataset.confirmTitle || 'Confirmar',
  body:  form.dataset.confirmBody  || 'Confirma salvar?',
  okText: form.dataset.confirmOk   || 'Confirmar'
});

}, true);

okBtn.addEventListener('click', function () {
const modal = bootstrap.Modal.getInstance(modalEl);
if (modal) modal.hide();

if (!pending) return;
const current = pending;
pending = null;

if (current.type === 'htmx') {
  current.el.dispatchEvent(new Event('confirmed', { bubbles: true }));
  return;
}

if (current.type === 'link') {
  window.location.href = current.el.getAttribute('href');
  return;
}

if (current.type === 'form') {
  current.form.dataset.confirmed = '1';
  current.form.submit();
  return;
}

});

modalEl.addEventListener('hidden.bs.modal', function () {
pending = null;
});
})();
</script>

</body>
</html>