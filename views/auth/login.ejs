<div class="d-flex align-items-center justify-content-center" style="min-height: 80vh;">
  <div class="card shadow-sm" style="max-width: 420px; width: 100%;">
    <div class="card-body p-4">
      <div class="text-center mb-4">
        <div class="mb-3">
          <img src="/img/logo.png" alt="Logo" class="login-logo">
        </div>
        <div class="d-flex align-items-center justify-content-center gap-2 mb-1">
          <i class="bi bi-clipboard-check" style="font-size: 1.5rem; color: var(--brand-600);"></i>
          <h2 class="h5 mb-0" style="color: var(--text-strong);">Controle de Presença</h2>
        </div>
      </div>

      <% if (error) { %>
        <div class="alert alert-danger py-2">
          <i class="bi bi-exclamation-circle me-1"></i>
          <%= error %>
        </div>
      <% } %>

      <form action="/auth/login" method="POST">
        <div class="mb-3">
          <label for="email" class="form-label">E-mail</label>
          <div class="input-group">
            <span class="input-group-text"><i class="bi bi-envelope"></i></span>
            <input
              type="email"
              class="form-control"
              id="email"
              name="email"
              required
              placeholder="admin@empresa.com"
              autocomplete="username"
            >
          </div>
        </div>

        <div class="mb-3">
          <label for="senha" class="form-label">Senha</label>
          <div class="input-group">
            <span class="input-group-text"><i class="bi bi-lock"></i></span>
            <input
              type="password"
              class="form-control"
              id="senha"
              name="senha"
              required
              placeholder="••••••••"
              autocomplete="current-password"
            >
          </div>
        </div>

        <button type="submit" class="btn btn-primary w-100">
          <i class="bi bi-box-arrow-in-right me-1"></i>
          Entrar
        </button>
        <div class="text-center mt-3 pb-3">
  <p class="text-muted small mb-0">
    <i class="bi bi-code-slash me-1"></i>
    Desenvolvido pelo <strong>Departamento de TI - Retha</strong>
  </p>
</div>
      </form>
    </div>
  </div>
</div>
