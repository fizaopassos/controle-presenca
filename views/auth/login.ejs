<div class="text-center mb-3">
<img src="/img/logo.png" alt="Logo" class="login-logo">
</div>


<div class="d-flex align-items-center justify-content-center" style="min-height: 80vh;">
<div class="card shadow-sm" style="max-width: 420px; width: 100%;">
<div class="card-body p-4">
<div class="text-center mb-4">
<div class="mb-2">
<i class="bi bi-clipboard-check" style="font-size: 2.2rem; color: var(--brand-600);"></i>
</div>
<h2 class="h5 mb-1" style="color: var(--text-strong);">Controle de Presença</h2>
<div class="text-muted small">Acesse com suas credenciais</div>
</div>

  <% if (error) { %>
    <div class="alert alert-danger py-2">
      <i class="bi bi-exclamation-circle me-1"></i>
      <%= error %>
    </div>
  <% } %>

  <form action="/auth/login" method="POST">
    <div class="mb-3">
      <label for="email" class="form-label">E-mail</label>
      <div class="input-group">
        <span class="input-group-text"><i class="bi bi-envelope"></i></span>
        <input
          type="email"
          class="form-control"
          id="email"
          name="email"
          required
          placeholder="admin@empresa.com"
          autocomplete="username"
        >
      </div>
    </div>

    <div class="mb-3">
      <label for="senha" class="form-label">Senha</label>
      <div class="input-group">
        <span class="input-group-text"><i class="bi bi-lock"></i></span>
        <input
          type="password"
          class="form-control"
          id="senha"
          name="senha"
          required
          placeholder="••••••••"
          autocomplete="current-password"
        >
      </div>
    </div>

    <button type="submit" class="btn btn-primary w-100">
      <i class="bi bi-box-arrow-in-right me-1"></i>
      Entrar
    </button>
  </form>

  <hr class="my-4">
  <p class="text-center text-muted small mb-0">
    Usuário de teste: admin@empresa.com<br>
    Senha: 123456
  </p>
</div>

</div>
</div>