<tr id="posto-<%= p.id %>">
  <td><%= p.id %></td>
  <td><%= p.nome %></td>
  <td><%= p.descricao || '-' %></td>
  <td>
    <% if (p.ativo) { %>
      <span class="badge bg-success">Ativo</span>
    <% } else { %>
      <span class="badge bg-secondary">Inativo</span>
    <% } %>
  </td>
  <td class="text-end">
<button
type="button"
class="btn btn-sm btn-outline-primary me-2"
hx-get="/postos/editar/<%= p.id %>?partial=1"
hx-target="#postoModalBody"
hx-swap="innerHTML"

Editar

</button>

<% if (p.ativo) { %>
<button
type="button"
class="btn btn-sm btn-outline-danger"
hx-post="/postos/toggle-ativo/<%= p.id %>"
hx-target="#posto-<%= p.id %>"
hx-swap="outerHTML"
hx-confirm="Tem certeza que deseja inativar este posto?"
>
Inativar
</button>
<% } else { %>
<button
type="button"
class="btn btn-sm btn-outline-success"
hx-post="/postos/toggle-ativo/<%= p.id %>"
hx-target="#posto-<%= p.id %>"
hx-swap="outerHTML"
hx-confirm="Tem certeza que deseja ativar este posto?"
>
Ativar
</button>
<% } %>
</td>
</tr>
