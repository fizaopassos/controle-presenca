<tr id="colaborador-<%= c.id %>">
<td><%= c.id %></td>
<td><%= c.nome %></td>
<td><%= c.empresa_nome || '-' %></td>
<td><%= c.condominio_nome || '-' %></td>
<td><%= c.posto_nome || '-' %></td>
<td>
<% if (c.tipo === 'cobertura') { %>
<span class="badge bg-info text-dark">Cobertura</span>
<% } else { %>
<span class="badge bg-primary">Fixo</span>
<% } %>
</td>
<td>
<% if (c.ativo) { %>
<span class="badge bg-success">Ativo</span>
<% } else { %>
<span class="badge bg-secondary">Inativo</span>
<% } %>
</td>

<td class="text-end">
<div class="d-inline-flex align-items-center gap-2">
<button
type="button"
class="btn btn-outline-primary btn-sm rounded-pill px-3"
hx-get="/colaboradores/editar/<%= c.id %>?partial=1"
hx-target="#colaboradorModalBody"
hx-swap="innerHTML"
>
Editar
</button>

  <form
    action="/colaboradores/toggle-ativo/<%= c.id %>"
    method="POST"
    class="d-inline"
    data-confirm="1"
    data-confirm-title="<%= c.ativo ? 'Inativar colaborador' : 'Ativar colaborador' %>"
    data-confirm-body="<%= c.ativo ? 'Tem certeza que deseja inativar este colaborador?' : 'Tem certeza que deseja ativar este colaborador?' %>"
    data-confirm-ok="<%= c.ativo ? 'Inativar' : 'Ativar' %>"
  >
    <button
      type="submit"
      class="btn btn-sm rounded-pill px-3 <%= c.ativo ? 'btn-outline-danger' : 'btn-outline-success' %>"
    >
      <%= c.ativo ? 'Inativar' : 'Ativar' %>
    </button>
  </form>
</div>

</td>
</tr>