<div class="d-flex justify-content-between align-items-start flex-wrap gap-2 mb-3">
<div>
<h4 class="page-title mb-1">
<i class="bi bi-people text-primary me-2"></i>
Colaboradores
</h4>
<p class="text-muted mb-0">
Gerencie os colaboradores vinculados às empresas, condomínios e postos.
</p>
</div>

<button
type="button"
class="btn btn-primary"
hx-get="/colaboradores/novo?partial=1"
hx-target="#colaboradorModalBody"
hx-swap="innerHTML">
<i class="bi bi-plus-circle me-1"></i>
Novo colaborador
</button>
</div>

<%
const isCoberturas = condominioSelecionado && condominioSelecionado.nome === 'Coberturas';
%>

<% if (typeof condominioSelecionado !== 'undefined' && condominioSelecionado && !isCoberturas) { %>
<div class="d-flex align-items-center justify-content-between flex-wrap gap-2 mb-3">
<div class="d-flex align-items-center gap-2">
<a href="/colaboradores" class="btn btn-outline-secondary btn-sm">
← Trocar condomínio
</a>
<span class="text-muted">
Condomínio: <strong><%= condominioSelecionado.nome %></strong>
</span>
</div>
</div>
<% } %>

<!-- Filtro Rápido -->
<div class="card mb-3">
<div class="card-body">
<div class="input-group">
<span class="input-group-text">
<i class="bi bi-search"></i>
</span>
<input
type="text"
class="form-control"
id="filtroNome"
placeholder="Buscar colaborador por nome..."
>
</div>
<small class="text-muted mt-2 d-block" id="totalColaboradores"></small>
</div>
</div>

<!-- A PARTIR DAQUI JÁ VEM A TABELA -->
<div class="card">
<div class="card-body">
<div class="table-responsive">
<table class="table align-middle" style="min-width: 900px;">
<thead>
<tr>
<th>Nome</th>
<th>Empresa</th>
<th>Condomínio</th>
<th>Posto</th>
<th>Tipo</th>
<th>Status</th>
<th class="text-end" style="width: 220px;">Ações</th>
</tr>
</thead>

    <tbody id="tabelaColaboradores">
      <% if (!colaboradores || colaboradores.length === 0) { %>
        <tr id="colaboradores-empty-row">
          <td colspan="7" class="text-muted py-3">
            Nenhum colaborador cadastrado ainda.
          </td>
        </tr>
      <% } else { %>
        <% colaboradores.forEach(c => { %>
          <%- include('_linha', { c: c }) %>
        <% }) %>
      <% } %>
    </tbody>
  </table>
</div>

</div>
</div>

<!-- Modal para inativar com data -->
<!-- Modal para inativar com data -->
<div class="modal fade" id="modalInativarColaborador" tabindex="-1">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Inativar colaborador</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>

      <form
            id="formInativarColaborador"
            method="POST"
            action="/colaboradores/inativar-com-data/0"
            hx-post="/colaboradores/inativar-com-data/0"
            hx-target="#colaborador-0"
            hx-swap="outerHTML"
            hx-include="#formInativarColaborador"
      >
        <div class="modal-body">
          <p>
            Você está prestes a inativar <strong id="nomeColaboradorInativar"></strong>.
          </p>
          <p class="text-muted small">
            Informe a partir de qual data ele não deve mais aparecer no efetivo:
          </p>

          <label class="form-label" for="data_inativacao">
            Data de inativação *
          </label>
          <input
            type="date"
            class="form-control"
            id="data_inativacao"
            name="data_inativacao"
            required
          >
          <small class="text-muted">
            A partir desta data, ele não aparecerá mais no lançamento e não será contado no calendário.
            Registros anteriores permanecem intactos.
          </small>
        </div>

        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
            Cancelar
          </button>

          <!-- AGORA O BOTÃO É SÓ SUBMIT NORMAL -->
          <button
            type="submit"
            class="btn btn-danger"
            id="btnConfirmarInativar"
          >
            Confirmar inativação
          </button>
        </div>
      </form>
    </div>
  </div>
</div>


<script>
  // Preencher modal de inativação quando abrir
  const modalInativar = document.getElementById('modalInativarColaborador');
  if (modalInativar) {
    modalInativar.addEventListener('show.bs.modal', function (event) {
const button = event.relatedTarget;
const colaboradorId = button && button.getAttribute('data-colaborador-id');
const colaboradorNome = button && button.getAttribute('data-colaborador-nome');

const nomeEl = document.getElementById('nomeColaboradorInativar');
const dataEl = document.getElementById('data_inativacao');
const form = document.getElementById('formInativarColaborador');

if (!colaboradorId || !form || !nomeEl || !dataEl) return;

nomeEl.textContent = colaboradorNome || '';

const hoje = new Date().toISOString().split('T')[0];
dataEl.value = hoje;

const url = '/colaboradores/inativar-com-data/' + colaboradorId;

form.setAttribute('action', url);
form.setAttribute('hx-post', url);
form.setAttribute('hx-target', '#colaborador-' + colaboradorId);

if (window.htmx) {
window.htmx.process(form);
}
    });
  }

  // Fechar modal após inativação bem-sucedida
  document.body.addEventListener('htmx:afterRequest', function(evt) {
    const el = evt.detail && evt.detail.elt ? evt.detail.elt : null;
    if (!el || !evt.detail.successful) return;

    // Se a requisição veio do formulário de inativação
    if (el.id === 'formInativarColaborador') {
      const modal = bootstrap.Modal.getInstance(modalInativar);
      if (modal) modal.hide();
    }
  });
</script>



<script>
  // Abrir modal quando o conteúdo do formulário for carregado via HTMX
  document.body.addEventListener('htmx:afterSwap', function (evt) {
    if (evt.target && evt.target.id === 'colaboradorModalBody') {
      const modalEl = document.getElementById('colaboradorModal');
      const modal = bootstrap.Modal.getOrCreateInstance(modalEl);
      modal.show();
    }

    // Remove linha vazia quando inserir o primeiro colaborador
    if (evt.target && evt.target.id === 'tabelaColaboradores') {
      const emptyRow = document.getElementById('colaboradores-empty-row');
      if (emptyRow) {
        emptyRow.remove();
      }
    }
  });

  // Filtro de busca em tempo real
  const filtroInput = document.getElementById('filtroNome');

  if (filtroInput) {
    filtroInput.addEventListener('input', function() {
      const termo = this.value.toLowerCase();
      const linhas = document.querySelectorAll('#tabelaColaboradores tr[data-nome]');
      let visiveis = 0;

      linhas.forEach(linha => {
        const nome = (linha.dataset.nome || '').toLowerCase();
        if (nome.includes(termo)) {
          linha.style.display = '';
          visiveis++;
        } else {
          linha.style.display = 'none';
        }
      });

      document.getElementById('totalColaboradores').textContent = 
        visiveis + ' colaboradores' + (visiveis !== 1 ? 's' : '');
    });
  }

  // Fechar modal após salvar com sucesso (novo ou editar)
  document.body.addEventListener('htmx:afterRequest', function(evt) {
    const el = evt.detail && evt.detail.elt ? evt.detail.elt : null;
    if (!el || !evt.detail.successful) return;

    // Verifica se o elemento disparador é o botão de salvar dentro do form de colaborador
    const form = el.closest('#formColaboradorHtmx');
    if (form) {
      const modalEl = document.getElementById('colaboradorModal');
      const modal = bootstrap.Modal.getInstance(modalEl);
      if (modal) modal.hide();
    }
  });
</script>

<!-- Modal para criar/editar Colaborador via HTMX -->
<div class="modal fade" id="colaboradorModal" tabindex="-1">
  <div class="modal-dialog modal-lg modal-dialog-centered modal-dialog-scrollable">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Colaborador</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body" id="colaboradorModalBody"></div>
    </div>
  </div>
</div>
